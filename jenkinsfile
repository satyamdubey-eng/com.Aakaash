pipeline {
    agent any
 tools {
        maven 'MAVEN_HOME'  
    }
    stages {
        stage('Build') {
            steps {
                echo "Building the project..."
		bat "mvn clean"
            }
        }
        stage('Test') {
            steps {
                echo "Running tests..."
		bat "mvn test"
            }
        }
	stage('compile'){
		steps{
		echo "compiling the project..."
		bat "mvn compile"

}
	
}
        stage('Deploy') {
            steps {
                echo "Deploying application..."
		
            }
        }
	
    }
}
